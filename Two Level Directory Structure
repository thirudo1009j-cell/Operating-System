#include <stdio.h>
#include <string.h>

struct {
    char fname[10][10];
    int fcount;
    char uname[10];
} dir[10];

int main() {
    int i, j, ucount = 0, choice;
    char uname[10], fname[10];

    printf("**** Two Level Directory Structure ****\n");

    while (1) {
        printf("\nMenu:\n");
        printf("1. Create User Directory\n");
        printf("2. Create File\n");
        printf("3. Delete File\n");
        printf("4. Search File\n");
        printf("5. Display All Files\n");
        printf("6. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
        case 1:
            printf("Enter user name to create: ");
            scanf("%s", uname);
            int exists = 0;
            for (i = 0; i < ucount; i++) {
                if (strcmp(uname, dir[i].uname) == 0) {
                    exists = 1;
                    break;
                }
            }
            if (exists)
                printf("User already exists!\n");
            else {
                strcpy(dir[ucount].uname, uname);
                dir[ucount].fcount = 0;
                ucount++;
                printf("User directory created successfully.\n");
            }
            break;

        case 2:
            printf("Enter user name: ");
            scanf("%s", uname);
            for (i = 0; i < ucount; i++) {
                if (strcmp(uname, dir[i].uname) == 0) {
                    printf("Enter file name to create: ");
                    scanf("%s", fname);
                    int found = 0;
                    for (j = 0; j < dir[i].fcount; j++) {
                        if (strcmp(fname, dir[i].fname[j]) == 0) {
                            found = 1;
                            break;
                        }
                    }
                    if (found)
                        printf("File already exists!\n");
                    else {
                        strcpy(dir[i].fname[dir[i].fcount], fname);
                        dir[i].fcount++;
                        printf("File created successfully.\n");
                    }
                    break;
                }
            }
            if (i == ucount)
                printf("User not found!\n");
            break;

        case 3:
            printf("Enter user name: ");
            scanf("%s", uname);
            for (i = 0; i < ucount; i++) {
                if (strcmp(uname, dir[i].uname) == 0) {
                    printf("Enter file name to delete: ");
                    scanf("%s", fname);
                    int found = 0;
                    for (j = 0; j < dir[i].fcount; j++) {
                        if (strcmp(fname, dir[i].fname[j]) == 0) {
                            found = 1;
                            strcpy(dir[i].fname[j], dir[i].fname[dir[i].fcount - 1]);
                            dir[i].fcount--;
                            printf("File deleted successfully.\n");
                            break;
                        }
                    }
                    if (!found)
                        printf("File not found!\n");
                    break;
                }
            }
            if (i == ucount)
                printf("User not found!\n");
            break;

        case 4:
            printf("Enter user name: ");
            scanf("%s", uname);
            for (i = 0; i < ucount; i++) {
                if (strcmp(uname, dir[i].uname) == 0) {
                    printf("Enter file name to search: ");
                    scanf("%s", fname);
                    int found = 0;
                    for (j = 0; j < dir[i].fcount; j++) {
                        if (strcmp(fname, dir[i].fname[j]) == 0) {
                            found = 1;
                            printf("File found in user directory.\n");
                            break;
                        }
                    }
                    if (!found)
                        printf("File not found.\n");
                    break;
                }
            }
            if (i == ucount)
                printf("User not found!\n");
            break;

        case 5:
            if (ucount == 0)
                printf("No users found.\n");
            else {
                for (i = 0; i < ucount; i++) {
                    printf("\nUser: %s\n", dir[i].uname);
                    if (dir[i].fcount == 0)
                        printf("  No files.\n");
                    else {
                        printf("  Files:\n");
                        for (j = 0; j < dir[i].fcount; j++)
                            printf("   %s\n", dir[i].fname[j]);
                    }
                }
            }
            break;

        case 6:
            return 0;

        default:
            printf("Invalid choice!\n");
        }
    }
}
