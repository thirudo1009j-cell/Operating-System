#include <stdio.h>
#include <string.h>

struct {
    char fname[20];
} dir[10];

int main() {
    int i, ch, n = 0;
    char f[20];

    printf("**** Single Level Directory ****\n");

    while (1) {
        printf("\nMenu:\n");
        printf("1. Create File\n2. Delete File\n3. Search File\n4. Display Files\n5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &ch);

        switch (ch) {
        case 1:
            printf("Enter file name to create: ");
            scanf("%s", f);
            int exists = 0;
            for (i = 0; i < n; i++) {
                if (strcmp(f, dir[i].fname) == 0) {
                    exists = 1;
                    break;
                }
            }
            if (exists)
                printf("File already exists!\n");
            else {
                strcpy(dir[n].fname, f);
                n++;
                printf("File created successfully.\n");
            }
            break;

        case 2:
            printf("Enter file name to delete: ");
            scanf("%s", f);
            int found = 0;
            for (i = 0; i < n; i++) {
                if (strcmp(f, dir[i].fname) == 0) {
                    found = 1;
                    strcpy(dir[i].fname, dir[n - 1].fname);
                    n--;
                    printf("File deleted successfully.\n");
                    break;
                }
            }
            if (!found)
                printf("File not found!\n");
            break;

        case 3:
            printf("Enter file name to search: ");
            scanf("%s", f);
            found = 0;
            for (i = 0; i < n; i++) {
                if (strcmp(f, dir[i].fname) == 0) {
                    found = 1;
                    printf("File found.\n");
                    break;
                }
            }
            if (!found)
                printf("File not found!\n");
            break;

        case 4:
            if (n == 0)
                printf("No files found in the directory.\n");
            else {
                printf("Files in Directory:\n");
                for (i = 0; i < n; i++)
                    printf("%s\n", dir[i].fname);
            }
            break;

        case 5:
            return 0;

        default:
            printf("Invalid choice.\n");
        }
    }
}
